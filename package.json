{
  "name": "slideshow-html",
  "version": "1.0.0",
  "description": "A secure, high-performance Next.js application for viewing HTML-based presentations with thumbnail generation capabilities",
  "keywords": [
    "slideshow",
    "presentation",
    "html",
    "nextjs",
    "react",
    "typescript",
    "puppeteer",
    "static-site"
  ],
  "homepage": "https://github.com/your-username/slideshow-html#readme",
  "bugs": {
    "url": "https://github.com/your-username/slideshow-html/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/your-username/slideshow-html.git"
  },
  "license": "MIT",
  "author": {
    "name": "Your Name",
    "email": "your.email@example.com"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "build:static": "cross-env STATIC_EXPORT=true NEXT_PUBLIC_STATIC_EXPORT=true next build && next export && tsx scripts/generate-thumbnails-post.ts",
    "preview:static": "npx serve -l 5000 out",
    "lint": "next lint",
    "lint:fix": "next lint --fix",
    "type-check": "tsc --noEmit",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:ci": "jest --ci --coverage --watchAll=false",
    "security:audit": "npm audit --audit-level=high",
    "security:fix": "npm audit fix",
    "clean": "rm -rf .next out node_modules/.cache",
    "prepare": "husky install || true"
  },
  "dependencies": {
    "@radix-ui/react-dialog": "^1.0.5",
    "@radix-ui/react-slot": "^1.0.2",
    "@types/dompurify": "^3.0.5",
    "@types/jsdom": "^21.1.7",
    "@types/serve-handler": "^6.1.4",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "crypto": "^1.0.1",
    "dompurify": "^3.2.6",
    "jsdom": "^26.1.0",
    "lucide-react": "^0.525.0",
    "next": "15.3.3",
    "puppeteer": "^22.0.0",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "serve-handler": "^6.1.6",
    "tailwind-merge": "^2.6.0",
    "tailwindcss-animate": "^1.0.7",
    "zod": "^3.25.74"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@tailwindcss/postcss": "^4",
    "@testing-library/dom": "^10.4.0",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/jest": "^30.0.0",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "@types/testing-library__jest-dom": "^5.14.9",
    "autoprefixer": "^10.4.16",
    "cross-env": "^7.0.3",
    "eslint": "^9",
    "eslint-config-next": "15.3.3",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "tailwindcss": "^4",
    "tsx": "^4.20.2",
    "typescript": "^5"
  }
}
