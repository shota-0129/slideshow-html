# Environment Configuration Example
# Copy this file to .env.local for local development

# =============================================================================
# DEVELOPMENT MODE CONFIGURATION
# =============================================================================
# Use these settings for local development (npm run dev)

# Node Environment
NODE_ENV=development

# Static Export Configuration
STATIC_EXPORT=false
NEXT_PUBLIC_STATIC_EXPORT=false

# Security Configuration (relaxed for development)
ENABLE_RATE_LIMITING=false
ENABLE_HTML_SANITIZATION=true
ENABLE_STRICT_CSP=false

# JavaScript Mode (allows JavaScript in HTML content)
# Set to 'true' to preserve JavaScript in slides, 'false' or unset for security
ALLOW_JAVASCRIPT=false

# Puppeteer Configuration (development-friendly)
PUPPETEER_TIMEOUT=30000
PUPPETEER_MAX_CONCURRENT=2
PUPPETEER_HEADLESS=true

# Logging Configuration (verbose for debugging)
LOG_LEVEL=debug
LOG_SECURITY_EVENTS=true
ENABLE_DETAILED_ERRORS=true

# =============================================================================
# PRODUCTION MODE CONFIGURATION
# =============================================================================
# Uncomment and modify these settings for production deployment

# NODE_ENV=production
# ENABLE_RATE_LIMITING=true
# ENABLE_HTML_SANITIZATION=true
# ENABLE_STRICT_CSP=true
# ALLOW_JAVASCRIPT=false
# PUPPETEER_TIMEOUT=15000
# PUPPETEER_MAX_CONCURRENT=1
# LOG_LEVEL=warn
# LOG_SECURITY_EVENTS=true
# ENABLE_DETAILED_ERRORS=false

# =============================================================================
# STATIC EXPORT CONFIGURATION
# =============================================================================
# Use these settings for static export build (npm run build:static)

# STATIC_EXPORT=true
# NEXT_PUBLIC_STATIC_EXPORT=true
# NODE_ENV=production
# ENABLE_HTML_SANITIZATION=true
# LOG_LEVEL=error

# =============================================================================
# OPTIONAL CONFIGURATIONS
# =============================================================================

# Custom port for development server
# PORT=3000

# Custom host for development server
# HOSTNAME=localhost

# Thumbnail generation settings
# THUMBNAIL_QUALITY=80
# THUMBNAIL_WIDTH=1280
# THUMBNAIL_HEIGHT=720

# Cache settings
# ENABLE_THUMBNAIL_CACHE=true
# CACHE_MAX_AGE=3600